#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int num1; int num2;
    scanf("%d %d", &num1, &num2);
     int sum = num1 + num2;
    int sub = num1 - num2;
     printf("%d %d \n",sum, sub);
      float num3; float num4;
    scanf("%f %f", &num3, &num4);
     float sum1 = num3 + num4;
    float sub1 = num3 - num4;
      printf("%0.1f %0.1f",sum1, sub1);
    return 0;
}
